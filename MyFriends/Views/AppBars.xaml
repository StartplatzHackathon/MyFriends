<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MyFriends.Views"
>
    <DataTemplate x:Key="GroupedItemsPageBottomAppBar">
        <Grid>
            <StackPanel Orientation="Horizontal">
                <Button Style="{StaticResource NewGiftAppBarButtonStyle}" 
                        Command="{Binding NewGiftCommand}"
                />
            </StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Style="{StaticResource NewGiftAppBarButtonStyle}" 
                        Command="{Binding ShowPeopleCommand}"
                        AutomationProperties.Name="Show People"
                />
                <Button Style="{StaticResource NewGiftAppBarButtonStyle}" 
                        AutomationProperties.Name="New Person"
                />
            </StackPanel>
        </Grid>
    </DataTemplate>   
</ResourceDictionary>
